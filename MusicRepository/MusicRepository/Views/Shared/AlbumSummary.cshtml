@model MusicRepository.Models.Album
<div class="new-item">
    @if (Model.ImageData != null)
    {
        <div style="float: left; margin-right: 20px">
            <img width="75" height="75" src="@Url.Action("GetImage", "Albums", new {id=Model.AlbumId})"/>
        </div>
    }
    <div style="float: right; width: 250px; background: lightblue">
        <p>
            <b>Number of songs: @ViewBag.Tracks</b>
        </p>
        @Html.ActionLink("Details", "Details", new { id = Model.AlbumId }) |
        @Html.ActionLink("Autor Details", "Details/" + Model.AutorId, "Autors") |
    </div>
    <h3>@Model.Name</h3>
    
    <h3>@ViewBag.Autor</h3>
    <p>@Model.Description</p>
   
</div>