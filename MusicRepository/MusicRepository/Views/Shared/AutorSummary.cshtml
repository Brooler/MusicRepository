@model MusicRepository.Models.Autor
<div class="new-item">
    @if (Model.ImageData != null)
    {
        
        <div style="float: left; margin-right: 20px">
            <img width="75" height="75" src="@Url.Action("GetImage", "Autors", new {Model.AutorId})" />
        </div>
    }
    <h3>@Model.Name</h3>
    <div style="float: right; margin-left: 20px; background-color: lightblue">
        <p>Number of albums: @ViewBag.Albums</p>
        @Html.ActionLink("Details", "Details", new {id = Model.AutorId}) |
        @Html.ActionLink("Delete this autor", "Delete", new {id = Model.AutorId})
    </div>
    <div>
        <p>@Model.Description</p>
    </div>
</div>