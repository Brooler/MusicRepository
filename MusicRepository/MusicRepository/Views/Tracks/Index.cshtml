@using MusicRepository.HtmlHalpers
@model MusicRepository.Models.TrackListViewModel

@{
    ViewBag.Title = "Tracks List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <b>Autor</b>
        </th>
        <th>
            <b>Album</b>
        </th>
        <th>
            <b>Name</b>
        </th>
        <th>
            <b>Rate</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.List) {
    <tr>
        <td>
            @Html.ActionLink(item.AutorName, "Details/" + item.AutorId, "Autors")
        </td>
        <td>
            @Html.ActionLink(item.AlbumName, "Details/" + item.AlbumId, "Albums")
        </td>
        <td>
            @Html.ActionLink(item.TrackName, "Details", new {id=item.Id})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index",
    new { page = x }))
</div>