@model MusicRepository.Models.AlbumViewModel

@{
   
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Edit", "Albums",
    FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr/>
        <div class="form-group">
            <b>Image</b>
            <br />
            @if (ViewBag.Album.ImageData == null)
                {
                
                }
                else
                {
                <img width="150" height="150" src="@Url.Action("GetImage", "Albums", new {id=ViewBag.Album.AlbumId})" />
            }
            <div>
                <b>Upload new image:</b>
                <input type="file" name="Image" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m=>m.Name, htmlAttributes: new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new {htmlAttributes=new {@class="form-control"}})
                @Html.ValidationMessageFor(m => m.Name, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.AutorName, htmlAttributes:new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.AutorName, Model.list)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Description, htmlAttributes:new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m => m.Description, new {htmlAttributes=new {@class="form-control"}})
                @Html.ValidationMessageFor(m => m.Description, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Rate, htmlAttributes:new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m => m.Rate, new {htmlAttributes=new {@class="form-control"}})
                @Html.ValidationMessageFor(m => m.Rate, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@ViewBag.Title class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
